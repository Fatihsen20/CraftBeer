<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".activities.NoteActivity">

    <LinearLayout
        android:id="@+id/activity_note_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/activity_note_Image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/bgactivity"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/activity_note_title"
            android:text="Başlık"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:textSize="19sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <View
        android:id="@+id/activity_note_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_note_container"
        android:background="@color/textcolor"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/activity_note_desc"
        android:text="desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_note_line"
        android:textColor="@color/textcolor"
        android:textSize="19sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

</RelativeLayout>